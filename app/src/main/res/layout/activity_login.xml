<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
    >
        <ImageView
                android:layout_width="100dp"
                android:layout_height="200dp" app:srcCompat="@drawable/ic_launcher"
                android:id="@+id/login_image" android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp" android:layout_marginBottom="4dp">
            <TextView
                    android:text="@string/username"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/login_t1" android:gravity="center_horizontal|center_vertical"
                    android:textColor="@android:color/black" android:textSize="15sp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="12"
                    android:id="@+id/editText" android:textSize="16sp"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp" android:layout_marginBottom="4dp">
            <TextView
                    android:text="@string/passwd"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/login_t2" android:gravity="center_horizontal|center_vertical"
                    android:textColor="@android:color/black" android:textSize="15sp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:inputType="textPassword"
                    android:ems="12"
                    android:id="@+id/editText2" android:textSize="16sp"
            />
        </LinearLayout>
        <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp" app:srcCompat="@drawable/ic_login" android:id="@+id/login_button"
                android:layout_gravity="center_horizontal" android:layout_marginTop="32dp"
                android:layout_marginBottom="48dp" android:onClick="onButtonClick"
                style="@android:style/Widget.Material.Light.Button.Borderless"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
            <TextView
                    android:text="忘记密码"
                    android:layout_width="150dp"
                    android:layout_height="32dp" android:id="@+id/login_click_tip1"
                    android:onClick="onButtonClick1"
                    android:layout_gravity="center_horizontal" android:gravity="center_horizontal|center_vertical"
                    android:textColor="@android:color/black" android:textStyle="bold"/>
            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/split_bar" android:layout_weight="1"/>
            <TextView
                    android:text="点击注册"
                    android:layout_width="150dp"
                    android:layout_height="32dp" android:id="@+id/login_click_tip2"
                    android:onClick="onButtonClick1"
                    android:layout_gravity="center_horizontal" android:gravity="center_horizontal|center_vertical"
                    android:textColor="@android:color/black" android:textStyle="bold"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>