<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.friend.ChatRoomActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
    </ScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
    >
        <EditText
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/chat_text" android:background="@color/split_bar" android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" android:layout_gravity="center_vertical" android:textSize="15sp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="36dp" app:srcCompat="@drawable/ic_send" android:id="@+id/chat_send"
                android:layout_weight="1" style="@android:style/Widget.Material.Button.Borderless"
                android:background="@color/split_bar"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>