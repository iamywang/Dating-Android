<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PathRecordActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="路径标识"
                        android:layout_width="85dp"
                        android:layout_height="32dp" android:id="@+id/record_t1" android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center_vertical"/>
                <TextView
                        android:text="0"
                        android:layout_width="85dp"
                        android:layout_height="32dp" android:id="@+id/record_t2" android:layout_weight="1"
                        android:textSize="15sp" android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_horizontal|center_vertical" android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="时间"
                        android:layout_width="85dp"
                        android:layout_height="32dp" android:id="@+id/record_t3" android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center_vertical"/>
                <TextView
                        android:text="00:00"
                        android:layout_width="85dp"
                        android:layout_height="32dp" android:id="@+id/record_t4" android:layout_weight="1"
                        android:textSize="15sp" android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_horizontal|center_vertical" android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="距离"
                        android:layout_width="85dp"
                        android:layout_height="32dp" android:id="@+id/record_t5" android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center_vertical"/>
                <TextView
                        android:text="0m"
                        android:layout_width="85dp"
                        android:layout_height="32dp" android:id="@+id/record_t6" android:layout_weight="1"
                        android:textSize="15sp" android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_horizontal|center_vertical" android:gravity="center_vertical"/>
            </LinearLayout>
            <Button
                    android:text="开始"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/record_button" android:onClick="onButtonClick"
                    style="@android:style/Widget.Material.Light.Button" android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <com.amap.api.maps.MapView
                android:id="@+id/record_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </com.amap.api.maps.MapView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>